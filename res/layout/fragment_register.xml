<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/username_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/label_username"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/password1_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/username_label_register"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/label_password"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/password2_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password1_label_register"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/label_verify_pass"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/email_label_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password2_label_register"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="@string/label_email"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/emailregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/email_label_register"
        android:layout_alignBottom="@+id/email_label_register"
        android:layout_alignLeft="@+id/password2register"
        android:layout_alignParentRight="true"
        android:inputType="textEmailAddress"
        android:ems="10" />

    <EditText
        android:id="@+id/password1register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password1_label_register"
        android:layout_alignBottom="@+id/password1_label_register"
        android:layout_alignLeft="@+id/password2register"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password2register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password2_label_register"
        android:layout_alignBottom="@+id/password2_label_register"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/password2_label_register"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/usernameregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/username_label_register"
        android:layout_alignLeft="@+id/password1register"
        android:layout_alignParentRight="true"
        android:inputType="text"
        android:ems="10" />

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailregister"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:onClick="register"
        android:text="@string/register" />

</RelativeLayout>